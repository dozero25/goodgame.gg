<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fourjo.idle.goodgame.gg.repository.BoardRepository">


    <select id ="selectOneBoard" parameterType="integer" resultType="fourjo.idle.goodgame.gg.web.dto.BoardDTO">
        select * from board_mst where  board_index = #{board_index}
    </select>


    <select id ="selectAllBoard" resultType="fourjo.idle.goodgame.gg.web.dto.BoardDTO">
        select * from board_mst
    </select>

    <select id ="searchBoard_title" parameterType="string" resultType="fourjo.idle.goodgame.gg.web.dto.BoardDTO">
        select * from board_mst where board_subject like CONCAT('%', #{searchWord}, '%')

    </select>


</mapper>