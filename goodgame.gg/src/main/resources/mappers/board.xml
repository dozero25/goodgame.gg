<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org// Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fourjo.idle.goodgame.gg.repository.BoardRepository">

    <insert id="insertBoard" parameterType="fourjo.idle.goodgame.gg.web.dto.board.BoardDTO">
        insert into board_mst
        values(0, #{boardSubject}, #{userIndex}, #{boardContent}, now(),
          0, #{boardUploadName}, #{boardUploadSize}, #{boardUploadLocation})
    </insert>

    <update id="updateBoard" parameterType="fourjo.idle.goodgame.gg.web.dto.board.BoardDTO">
        update board_mst set board_subject=#{board_subject},board_content=#{board_content}
        where boardIndex=#{boardIndex}
    </update>

    <delete id="deleteBoard" parameterType="fourjo.idle.goodgame.gg.web.dto.board.BoardDTO">
        delete from board_mst where boardIndex=#{boardIndex}
    </delete>

    <select id="selectAllBoard" resultType="fourjo.idle.goodgame.gg.web.dto.board.BoardDTO">
        select * from board_mst order by boardIndex desc
    </select>

    <select id="selectOneBoard" resultType="fourjo.idle.goodgame.gg.web.dto.board.BoardDTO">
        select * from board_mst where
        boardIndex=#{boardIndex}
    </select>

    <select id="searchMyPostListByIndex" parameterType="integer" resultType="fourjo.idle.goodgame.gg.web.dto.board.BoardDTO">
        select * from board_mst where userIndex =${userIndex}
    </select>

    <select id="searchMyReplyListByIndex" parameterType="integer" resultType="fourjo.idle.goodgame.gg.web.dto.board.BoardDTO">
        select * from reply_mst where userIndex =${userIndex}
    </select>

    <select id="searchListNAME" resultType="fourjo.idle.goodgame.gg.web.dto.board.BoardDTO">
        select * from board_mst where name like #{searchWord}
    </select>

    <select id="selectAllPageBlock" resultType="fourjo.idle.goodgame.gg.web.dto.board.BoardDTO">
        select * from board_mst
        order by boardIndex desc limit #{startRow},#{pageBlock}
    </select>
    <select id="searchListID_PAGE" resultType="fourjo.idle.goodgame.gg.web.dto.board.BoardDTO">
        select * from board_mst
        where id like #{searchWord}
        order by num desc limit #{startRow},#{pageBlock}
    </select>
    <select id="searchListNAME_PAGE" resultType="fourjo.idle.goodgame.gg.web.dto.board.BoardDTO">
        select * from board_mst
        where name like #{searchWord}
        order by num desc limit #{startRow},#{pageBlock}
    </select>

    <select id="getTotalRows" resultType="int">
        select count(*) totalRows from board_mst
    </select>
    <select id="search_totalRows_id" resultType="int">
        select count(*) totalRows from board_mst  where id like #{searchWord}
    </select>
    <select id="search_totalRows_name" resultType="int">
        select count(*) totalRows from board_mst  where name like #{searchWord}
    </select>

