<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fourjo.idle.goodgame.gg.repository.EmpRepository">

    <insert id="empInsert" parameterType="fourjo.idle.goodgame.gg.web.dto.EmpDto">
        insert into emp_mst
        values(0, #{empId}, #{empPw}, #{empName}, #{empRegNum}, #{empEmail}, #{empPhone}, #{empGender})
    </insert>

    <delete id="empDelete" parameterType="fourjo.idle.goodgame.gg.web.dto.EmpDto">
        Delete from emp_mst where emp_index = #{empIndex}
    </delete>

    <update id="empUpdate" parameterType="fourjo.idle.goodgame.gg.web.dto.EmpDto">
        update emp_mst set
            emp_id = #{empId},
            emp_pw = #{empPw},
            emp_name = #{empName},
            emp_reg_num = #{empRegNum},
            emp_email = #{empEmail},
            emp_phone = #{empPhone},
            emp_gender = #{empGender}
        where emp_index = #{empIndex}
    </update>

</mapper>