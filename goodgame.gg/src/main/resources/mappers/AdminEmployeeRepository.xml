<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fourjo.idle.goodgame.gg.repository.AdminEmployeeRepository">

    <insert id="adminEmployeeInsert" parameterType="fourjo.idle.goodgame.gg.web.dto.AdminEmployeeDto">
        insert into emp_mst
        values(0, #{empId}, #{empPw}, #{empName}, #{empRegNum}, #{empEmail}, #{empPhone}, #{empGender})
    </insert>

    <delete id="adminEmployeeDelete" parameterType="fourjo.idle.goodgame.gg.web.dto.AdminEmployeeDto">
        Delete from emp_mst where empIndex = #{empIndex}
    </delete>

    <update id="adminEmployeeUpdate" parameterType="fourjo.idle.goodgame.gg.web.dto.AdminEmployeeDto">
        update emp_mst
        set
            empId = #{empId},
            empPw = #{empPw},
            empName = #{empName},
            empRegNum = #{empRegNum},
            empEmail = #{empEmail},
            empPhone = #{empPhone},
            empGender = #{empGender}
        where
            empIndex = #{empIndex}
    </update>

    <select id = "adminEmployeeSearch" parameterType ="String" resultType = "fourjo.idle.goodgame.gg.web.dto.AdminEmployeeDto">
        select
            *
        from
            emp_mst
        where
            empId = #{empId}
    </select>

    <insert id="adminInsertRoleId" parameterType="Integer">
        insert into role_dtl values(0, #{empIndex}, 2)
    </insert>





</mapper>